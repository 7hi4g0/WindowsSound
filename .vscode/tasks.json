{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "C/C++: cl.exe build active file",
			"command": "cl.exe",
			"args": [
				"/W4",
				"/Zi",
				"/EHsc",
				"/Fe:",
				"main.exe",
				"${workspaceFolder}\\main.cpp",
				"user32.lib",
				"dsound.lib",
				"xaudio2.lib",
				"gdi32.lib",
				"ole32.lib"
			],
			"options": {
				"cwd": "${workspaceFolder}\\build"
			},
			"problemMatcher": [
				"$msCompile"
			],
			"presentation": {
				"reveal": "always",
				"panel": "shared",
				"clear": true
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}